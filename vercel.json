{
  "version": 2,
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "src/api/generate-gif.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/generate-gif",
      "dest": "/src/api/generate-gif.js"
    },
    { "handle": "filesystem" },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ]
}
